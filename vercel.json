{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.9",
      "maxDuration": 10
    },
    "api/telegram_webhook.py": {
      "runtime": "python3.9", 
      "maxDuration": 10
    }
  },
  "env": {
    "GOOGLE_APPLICATION_CREDENTIALS": "@google_credentials",
    "GEMINI_API_KEY": "@gemini_api_key",
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token"
  }
}
